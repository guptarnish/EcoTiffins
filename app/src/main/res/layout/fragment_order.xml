<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">
    <ScrollView
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                app:cardElevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="Description"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtDescription"
                        android:textSize="14sp"
                        android:text="@string/single_pack_contains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="15dp"
                app:cardElevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="Order Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TableLayout
                        android:stretchColumns="*"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:textSize="18sp"
                                android:text="Quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/editQty"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="0"
                                android:gravity="end"
                                android:maxLength="2"
                                android:singleLine="true"
                                android:inputType="number"
                                android:theme="@style/ColorAccentSupplier" />
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bottom_border_gray">
                            <TextView
                                android:textSize="18sp"
                                android:text="Rate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtRate"
                                android:textSize="18sp"
                                android:text="Rs. 60"
                                android:textColor="@color/colorGray"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:layout_height="wrap_content" />
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="8dp">
                            <TextView
                                android:textSize="18sp"
                                android:text="Total Amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtTotal"
                                android:textSize="18sp"
                                android:text="Rs. 60"
                                android:textColor="@color/colorGray"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:layout_height="wrap_content" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPaddingTop="14dp"
                app:contentPaddingBottom="12dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp"
                app:cardElevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="72dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtInputLayoutPromoCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/editPromoCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apply Promo Code Here"
                            android:maxLength="15"
                            android:theme="@style/ColorAccentSupplier" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txtInputLayoutAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/editAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Delivery Address"
                            android:singleLine="false"
                            android:inputType="textPostalAddress|textMultiLine"
                            android:theme="@style/ColorAccentSupplier" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|center_horizontal"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_tiffin"/>
</RelativeLayout>
